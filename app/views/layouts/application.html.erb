<!DOCTYPE html>
<html>
  <head>
    <title>Userauth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= render "layouts/nav" %>

      <% flash.each do |message_type, message| %>
        <% if message_type == "notice" %>
          <div class="alert alert-success"><%= message %><button class="close" data-dismiss="alert">×</button></div>
        <% elsif message_type == "alert" %>
          <div class="alert alert-danger"><%= message %><button class="close" data-dismiss="alert">×</button></div>
        <% else %>
          <div class="alert alert-<%= message_type %>"><%= message %><button class="close" data-dismiss="alert">×</button></div>
        <% end %>
      <% end %>

      <%= yield %>
      
    </div>
  </body>
</html>
