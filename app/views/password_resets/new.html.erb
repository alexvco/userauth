<h1>Log in</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(:password_reset, url: password_reset_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Reset Password", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>